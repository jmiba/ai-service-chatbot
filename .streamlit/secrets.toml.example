# =============================================================================
# AI Service Chatbot - Configuration Template
# =============================================================================
# Copy this file to secrets.toml and fill in your values.
# Never commit secrets.toml to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# OpenAI Configuration (Required)
# -----------------------------------------------------------------------------
[openai]
api_key = "sk-your-openai-api-key"

# Vector store ID for document retrieval
vector_store_id = "vs_your-vector-store-id"

# Assistant ID (optional - will be created if not provided)
# assistant_id = "asst_your-assistant-id"

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
[postgres]
host = "localhost"
port = 5432
database = "chatbot"
user = "chatbot_user"
password = "your-database-password"

# -----------------------------------------------------------------------------
# Admin Password Authentication (Required)
# -----------------------------------------------------------------------------
# At minimum, provide a password for admin access.
# Generate a secure password and keep it safe.
[passwords]
admin_password = "your-secure-admin-password"

# -----------------------------------------------------------------------------
# OIDC Authentication (Optional)
# -----------------------------------------------------------------------------
# To enable Single Sign-On via OpenID Connect, configure the [auth] section.
# Requires streamlit[auth]>=1.42.0
#
# Generate cookie_secret with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# [auth]
# cookie_secret = "your-generated-cookie-secret"
# redirect_uri = "https://your-domain.com/oauth2callback"
# client_id = "your-oidc-client-id"
# client_secret = "your-oidc-client-secret"
# server_metadata_url = "https://your-idp.com/.well-known/openid-configuration"
#
# # Optional: Restrict access to specific email addresses
# allowlist = ["user1@example.com", "user2@example.com"]
#
# # Optional: Allow password fallback when OIDC is enabled
# allow_password_fallback = true
#
# # For multiple providers, use named sections:
# # [auth.provider1]
# # client_id = "..."
# # client_secret = "..."
# # server_metadata_url = "..."
